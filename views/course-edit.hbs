<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      required
      value="{{course.title}}"
    />
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="Fill the field"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
      value="{{course.price}}"
    />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Fill the field"></span>
  </div>

  <div class="input-field">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      required
      value="{{course.img}}"
    />
    <label for="img">URL of image</label>
    <span class="helper-text" data-error="Fill the field"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}" />

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>
<form action="/courses/remove" method="POST" class="_remove">
  <input type="hidden" name="id" value="{{course.id}}" />
  <button type="submit" class="btn red">Remove course</button>
</form>